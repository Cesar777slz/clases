//realizar un programa que determine el precio del billete de ida y vuelta en ferrocarril, sabiendo que si el numero de dias de estancia es superior a 7
// y la distancia superior a 800 km el billete tiene una reduccion del 30%. El programa debe permitir calcular el precio mas de una vez sin cerrarse 
//el precio es de 2$ por km 
 #include <iostream>
 using namespace std;
 
 int main (){
 	int precio= 0;
 	int NumerodeDias = 0;
 	int distancia= 0;
 	int descuento= 0;
 	char key;
 	
 	do{
 	cout <<"ingrese el numero de dias de su estadia:" << endl;
 	cin >> NumerodeDias;
 	
 	cout <<"ingrese la distancia:" << endl;
 	cin >> distancia;
 	
 	precio= 2 * distancia; 
 	
 	if ( NumerodeDias > 7 && distancia > 800){
 		descuento= 0.3 * precio;
 		
 		precio= precio - descuento;
 		cout <<"su precio con descuento es de:" << endl;
	 }
	 
	 else {
	 	cout << "su precio seria:" << endl;	
}
    cout <<"si deseas continuar ingresa la letra d, sino ingresa cualquier otra"<< endl;
    cin>>key;
	 }while(key == 'd' || key == 'D')
 	
	return 0;
 }
